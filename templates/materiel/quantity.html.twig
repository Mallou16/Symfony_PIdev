{% extends 'base1.html.twig' %}

{% block body %}

    <center class="py-8">
    <div class="col-lg-4">
        {{ form_start(f , {'action': path('AddPEC' ,{'idmateriel':idmateriel , 'quantitemat':quantitemat}), 'method': 'POST'}) }}
        <div class="card">
            <div class="card-body">
                <div class="mb-3">
                    <div class="form-label">Veuillez saisir la quantité que vous souhaite reserver avant de confirmer</div>
                    <!--<input type="text" class="form-control">-->
                    {{ form_widget(f.quantiteP ,{ 'attr':{"placeholder":'quantité que vous souhaite '}}) }}
                    {{ form_errors(f.quantiteP ,{ 'attr':{'class':'text-danger'}}) }}
                    {% if (error==true) %}
                        <div class="bg-red-lt" data-demo-color>Sorry, We can not buy all this quantity, please enter again!</div>
                    {% endif %}
                </div>
                <div class="d-flex flex-row-reverse">
                    {{ form_widget(f) }}
                    <a href="{{ path('ReadF') }}" class="btn btn-link link-secondary" >Cancel</a>

                    <!--<a href="#" class="btn btn-primary w-100">Confirm</a>-->
                </div>
            </div>
        </div>
        {{ form_end(f) }}
    </div>
    </center>

{% endblock %}
