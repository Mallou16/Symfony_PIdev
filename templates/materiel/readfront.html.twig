    <div class="page">
        <nav class="navbar navbar-expand-lg navbar-light navbar-primary" id="navbar-primary">
            <div class="container">
                <div class="navbar-collapse collapse">
                    <h6 class="navbar-heading">Navigation</h6>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#" >
                  <span class="nav-link-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                  </span>
                                <span class="nav-link-title">Home</span>
                            </a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="#" >
                  <span class="nav-link-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="9 11 12 14 22 4"></polyline><path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path></svg>
                  </span>
                                <span class="nav-link-title">Campy Market</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="content">
            <div class="container">
                <!-- Page title -->
                <div class="page-header">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <h2 class="page-title">
                                Campy Market
                            </h2>
                        </div>
                        <div class="card-header"></div>
                        <div class="card-body border-bottom py-3">
                            <div class="d-flex">
                                <h3 class="card-title">Liste Materiel</h3>
                                <div class="ml-auto text-muted">
                                    <div class="col-10 col-sm-4 col-md-12 col-xl mb-13">
                                        <a class="btn btn-info btn-block" href="{{ path('addfront') }}">Add Materiel</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table card-table table-vcenter text-nowrap datatable">
                                <thead>
                                <tr>
                                    <th>Nom <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                    <th>Quantite <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                    <th>prix <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                    <th>Etat <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                    <th>Description <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                    <th>Buy <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                    <th>Edit <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr {% for i in materiel %}>
                                    <td>{{ i.getNom() }}</td>
                                    <td>{{ i.getQuantite() }}</td>
                                    <td>{{ i.getPrix() }}</td>
                                    <td>{{ i.getEtat }}</td>
                                    <td>{{ i.getDescription() }}</td>
                                    <td><a data-toggle="modal" data-target="#modal-report" class="btn btn-primary"> Buy </a></td>
                                    <td><a href="{{ path('updatefront',{'id':i.getIdMateriel()}) }}" class="btn btn-outline-secondary btn-icon-text"> Edit </a></td>
                                </tr {% endfor %} >
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!--footer-->
            </div>
        </div>
    <div class="modal modal-blur fade" id="modal-report" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Materiel</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                    </button>
                </div>
                <form id="form_edit" name="form_edit" method="post" action="#">
                    <div class="modal-body">
                        <input type="hidden" name="modal_id" id="modal_id" value="0">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="mb-3">
                                    <label class="form-label">Quantite demandé</label>
                                    <div class="input-group input-group-flat">
                                        <input type="text" class="form-control" name="cs_nm_form" id="cs_nm_form"  placeholder="Saisir la quantite que vous souhaite ..." pattern="[1-9]+[0-9]*" type="required">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a href="#" class="btn btn-link link-secondary" data-dismiss="modal">
                            Cancel
                        </a>
                        <input type="submit" class="btn btn-primary ml-auto" value="Confirm">
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}