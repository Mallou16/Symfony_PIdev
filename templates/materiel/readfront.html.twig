    <div class="page">
    <div class="container d-flex align-items-center justify-content-between">
        <nav id="navbar" class="navbar">
            <ul>
                <li><a><span class="nav-link-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                  </span>Home</a></li>
                <li><a class="active" href="{{ path('ReadF') }}"><span class="nav-link-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="9 11 12 14 22 4"></polyline><path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path></svg>
                  </span>Campy Market</a></li>
                <li><a href="{{ path('ReadPEC') }}"><span class="nav-link-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="9 11 12 14 22 4"></polyline><path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path></svg>
                  </span>Mes achats</a></li>
                <li><a href="{{ path('Recu') }}" target="_blank"><span class="nav-link-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="9 11 12 14 22 4"></polyline><path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path></svg>
                  </span>Réçu d'achat</a></li>
            </ul>
            <i class="bi bi-list mobile-nav-toggle"></i>
        </nav>
    </div>
        <div class="content">
            <div class="container">
                <!-- Page title -->
                <div class="page-header">
                    <div class="row align-items-center">
                        <div class="py-3"></div>
                        <div class="col-auto">
                            <h2 class="page-title">
                                Campy Market
                            </h2>
                        </div>
                        <div class="card-header"></div>
                        <div class="card-body border-bottom py-3">
                            {{ form_start(form , {'action': path('search'), 'method': 'POST'}) }}
                            <div class="d-flex">
                                <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
  <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
</svg>
              </span>
                                    {{ form_row(form.nom ,{'attr':{"placeholder":'Chercher par le nom ..' , "class":'form-control' , "aria-describedby":'basic-addon1'}}) }}
                                </div>
                                <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
  <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
</svg>
              </span>
                                    {{ form_row(form.prix ,{'attr':{"placeholder":'Chercher par le prix ..'}}) }}
                                </div>
                                <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
  <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
</svg>
              </span>
                                    {{ form_row(form.quantite ,{'attr':{"placeholder":'Chercher par la quantité ..'}}) }}
                                </div>
                                {{ form_row(form.Search) }}
                            </div>
                            {{ form_end(form) }}
                        </div>
                        <div class="table-responsive">
                            <table class="table card-table table-vcenter text-nowrap datatable">
                                <thead>
                                <tr>
                                    <th>Nom <a href="{{ path('trinom') }}"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></a></th>
                                    <th>Quantite <a href="{{ path('triquantite') }}"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></a></th>
                                    <th>prix <a href="{{ path('triprix') }}"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></a></th>
                                    <th>Etat <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                    <th>Description <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                    <th>Buy <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                    <th>Edit <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                    <th>Show Article <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr {% for i in materiel %}>
                                    <td>{{ i.getNom() }}</td>
                                    <td>{{ i.getQuantite() }}</td>
                                    <td>{{ i.getPrix() }}</td>
                                    <td>{{ i.getEtat }}</td>
                                    <td>{{ i.getDescription() }}</td>
                                   <!-- <form action="" method="POST">
                                    <td><input type="submit" class="btn btn-primary" data-toggle="modal" data-target="#modal-report" value="Buy"></td>
                                    </form>-->
                                    <td><a href="{{ path('setidquantity',{'idmateriel':i.getIdMateriel() , 'quantitemat':i.getQuantite()}) }}" class="btn btn-primary">Buy</a></td>
                                    <td><a href="{{ path('updatefront',{'id':i.getIdMateriel()}) }}" class="btn btn-outline-secondary btn-icon-text"> Edit </a></td>
                                    <td><a target="_blank" href="{{ path('showarticle',{'image':i.getImage() , 'description':i.getDescription()}) }}" class="btn btn-outline-warning w-100"> Show Image </a></td>
                                </tr {% endfor %} >
                                </tbody>
                            </table>
                            <hr>
                            <div class="d-flex">
                            <div class="ml-auto text-muted">
                                <div class="col-10 col-sm-4 col-md-12 col-xl mb-13">
                                    <a class="btn btn-info btn-block" href="{{ path('addfront') }}">Add Materiel</a>
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--footer-->
            </div>
        </div>

{% endblock %}