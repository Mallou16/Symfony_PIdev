    <div class="content">
        <div class="container">
            <!-- Page title -->
            <div class="page-header">
                <div class="row align-items-center">
                    <div class="card-body border-bottom py-3">
                        <div class="d-flex">
                            <h3 class="card-title">Liste des achats</h3>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table card-table table-vcenter text-nowrap datatable">
                                <thead>
                                <tr>
                                    <th>Nom <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                    <th>Quantite<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                    <th>prix Unitaire<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                    <th>Prix Totale<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                    <th>Delete <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg></th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr {% for i in pm %}>

                                    <td>{{ i.nom }}</td>
                                    <td>{{ i.quantiteP }}</td>
                                    <td>{{ i.prixU }}</td>
                                    <td class="text-muted" >{{ i.prixTotale }} DT</td>
                                    <td><a href="{{ path('deletefrontpanier',{'id':i.id}) }}" class="btn btn-outline-secondary btn-icon-text"> Reject </a></td>
                                </tr {% endfor %}>
                                </tbody>
                        </table>
                        <div class="card-header"></div>
                        <div class="card-body border-bottom py-4">
                            <div class="d-flex">
                                <h3 class="card-title">Prix Totale</h3>
                                <div class="px-3" >
                                    <input type="text" class="form-control" name="example-disabled-input" placeholder="Disabled..."
                                           value="{{ somme }} DT" disabled>
                                </div>
                                <div class="ml-auto text-muted">
                                    <div class="col-10 col-sm-4 col-md-12 col-xl mb-13">
                                        <a class="btn btn-info btn-block px-4" data-toggle="modal" data-target="#modal-success">Buy All
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-coin" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                <circle cx="12" cy="12" r="9"></circle>
                                                <path d="M14.8 9a2 2 0 0 0 -1.8 -1h-2a2 2 0 0 0 0 4h2a2 2 0 0 1 0 4h-2a2 2 0 0 1 -1.8 -1"></path>
                                                <path d="M12 6v2m0 8v2"></path>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--footer-->
        </div>
    </div>
    <div class="modal modal-blur fade" id="modal-success" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document" >
        <div class="modal-content">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            <div class="modal-status bg-success"></div>
            <div class="modal-body text-center py-4">
                <!-- Download SVG icon from http://tabler-icons.io/i/circle-check -->
                <svg xmlns="http://www.w3.org/2000/svg" class="icon mb-2 text-green icon-lg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><circle cx="12" cy="12" r="9" /><path d="M9 12l2 2l4 -4" /></svg>
                <h3>Payment succedeed</h3>
                <div class="text-muted">Your payment of {{ somme }} DT has been successfully submitted. If you want to buy another Materiels, then click on Buy Another</div>
            </div>
            <div class="modal-footer">
                <div class="w-100">
                    <div class="row">
                        <div class="col"><a class="btn w-100" data-dismiss="modal">
                                Ignore
                            </a></div>
                            <div class="col"><a class="btn btn-success w-100" href="{{ path('confirmation') }}">
                                Confirm
                            </a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
